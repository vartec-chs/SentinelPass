{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@screens": ["screens"],
			"@hooks": ["hooks"],
			"@components": ["components"],
			"@layouts": ["layouts"],
			"@ui": ["ui"],
			"@modules": ["modules"],
			"@zod-schemas": ["zod-schemas"],
			"@api": ["api"],
			"@states": ["states"],
			"@providers": ["providers"],
			"@assets": ["assets"],
			"@configs": ["configs"],
			"@utils": ["utils"],
			"@ts": ["types"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
